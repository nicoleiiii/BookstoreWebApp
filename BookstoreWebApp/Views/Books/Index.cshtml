@model List<BookstoreWebApp.Models.Book>

@{
    ViewData["Title"] = "Book List";
}

<h2>Book List</h2>

<a href="@Url.Action("Create", "Books")" class="btn btn-primary">Add New Book</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Publication Year</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>$@book.Price</td>
                <td>@book.PublicationYear</td>
                <td>
                    <a href="@Url.Action("Edit", "Books", new { id = book.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Books", new { id = book.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


